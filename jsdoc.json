{
  "source": {
    "include": ["public", "docs"],
    "exclude": ["public/bebras-modules"]
  },
  "plugins": ["plugins/markdown"],

  "opts": {
    "destination": "../documentation_unixfilters/docs/jsdoc/",
    "recurse": true,
    "readme": "./docs/README.md",
    "template": "node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "default_theme": "fallback-light",
      "home": "./docs/README.md",
      "favicon": "path",
      "sort": false,
      "homepageTitle": "Documentation Unix Filters",
      "footer": "<a href='index.html'>Accueil</a> | Version 1.0 | Documentation générée automatiquement"
    }
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
